{"ast":null,"code":"import { Fragment as _Fragment } from \"react/jsx-runtime\";\nimport { jsx as _jsx } from \"react/jsx-runtime\";\nimport React, { useContext, useEffect, useRef } from 'react';\nimport { useAuth } from '../../lib/newAuth';\nimport { useRouter } from 'next/router';\nimport { IsActiveContext } from './DesktopNavbar';\nimport gsap, { Power4 } from 'gsap';\nimport { useWindowSize } from '../../utils/useWindowSize';\n\nconst Redirect = ({\n  to\n}) => {\n  const router = useRouter();\n  useEffect(() => {\n    router.push(to);\n  }, [to]);\n  return null;\n};\n\nconst NavbarTemplate = ({\n  children\n}) => {\n  // Mobile friendly\n  const size = useWindowSize();\n  const activeHover = useContext(IsActiveContext);\n  const {\n    currentUser\n  } = useAuth();\n  const contentRef = useRef(null);\n  const activeClass = activeHover ? 'ml-52' : 'ml-20';\n\n  if (activeHover) {\n    gsap.to(contentRef.current, {\n      marginLeft: '208px',\n      ease: Power4.easeOut // duration: 1\n\n    });\n  } else {\n    gsap.to(contentRef.current, {\n      marginLeft: '80px',\n      ease: Power4.easeOut\n    });\n  }\n\n  if (!currentUser) {\n    return /*#__PURE__*/_jsx(Redirect, {\n      to: \"/\"\n    });\n  }\n\n  return /*#__PURE__*/_jsx(_Fragment, {\n    children: size.width < 860 ? /*#__PURE__*/_jsx(_Fragment, {\n      children: children\n    }) : /*#__PURE__*/_jsx(\"div\", {\n      ref: contentRef,\n      className: `relative h-full ${activeClass} bg-background dark:bg-secondary`,\n      style: {\n        transitionTimingFunction: 'linear',\n        transitionDuration: '200ms',\n        transitionProperty: 'width, margin-left'\n      },\n      children: children\n    })\n  });\n};\n\nexport default NavbarTemplate;","map":null,"metadata":{},"sourceType":"module"}