{"ast":null,"code":"import { jsx as _jsx } from \"react/jsx-runtime\";\nimport React, { useState, useEffect, useRef } from 'react';\nimport gsap, { Power4 } from 'gsap';\nimport Tippy from '@tippyjs/react';\n\nconst IdeaTippy = () => {\n  const {\n    0: visible,\n    1: setVisible\n  } = useState(false);\n  const contentRef = useRef(null);\n  const tippyRef = useRef();\n\n  const show = () => {\n    gsap.fromTo(tippyRef.current, {\n      autoAlpha: 0,\n      scale: 0\n    }, {\n      autoAlpha: 1,\n      scale: 1,\n      duration: 1,\n      transformOrigin: 'bottom left',\n      ease: Power4.easeOut\n    });\n    setVisible(true);\n  };\n\n  const hide = async () => {\n    await gsap.to(tippyRef.current, {\n      autoAlpha: 0,\n      scale: 0,\n      duration: 1,\n      transformOrigin: 'bottom left',\n      ease: Power4.easeIn\n    });\n    setVisible(false);\n  };\n\n  const onImageClick = () => {\n    if (!visible || visible) {\n      visible ? hide() : show();\n    }\n  };\n\n  useEffect(() => {\n    // GSAP\n    gsap.fromTo(contentRef.current, {\n      autoAlpha: 0\n    }, {\n      autoAlpha: 1,\n      duration: 2,\n      transformOrigin: 'bottom left',\n      ease: Power4.easeOut\n    });\n  }, []);\n  return /*#__PURE__*/_jsx(Tippy // trigger={tippyMonster}\n  , {\n    zIndex: visible ? 40 : 0,\n    onShow: show,\n    animation: \"fade\",\n    duration: 500,\n    touch: true,\n    visible: visible,\n    onClickOutside: hide,\n    offset: [180, -25] // placement=\"right-start\"\n    ,\n    interactive: true,\n    content: // Project manager start\n    visible && /*#__PURE__*/_jsx(\"div\", {\n      ref: tippyRef,\n      className: \"h-32 w-80 shadow-lg rounded-2xl bg-primary flex justify-center items-center focus:outline-none\",\n      children: /*#__PURE__*/_jsx(\"p\", {\n        className: \"p-4 text-sm text-center text-white flex justify-center items-center\",\n        children: \"The startup idea creator will guide you through the entire process of creating your business plan. Start growing your project, without any special business knowledge!\"\n      })\n    }),\n    children: /*#__PURE__*/_jsx(\"img\", {\n      onClick: onImageClick,\n      className: \"cursor-pointer ml-2 relative bottom-0.5 opacity-80\",\n      src: \"/members/bulb.svg\",\n      height: 24,\n      width: 24\n    })\n  });\n};\n\nexport default IdeaTippy;","map":null,"metadata":{},"sourceType":"module"}